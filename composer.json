{
    "name": "lettermint/lettermint-laravel-php8",
    "description": "Official Lettermint driver for Laravel (PHP 8.0+ fork)",
    "keywords": [
        "Lettermint",
        "laravel",
        "lettermint-laravel"
    ],
    "homepage": "https://github.com/lettermint/lettermint-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Bjarn Bronsveld",
            "email": "bjarn@lettermint.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^9.0 | ^10.0 | ^11.0 | ^12.0",
        "lettermint/lettermint-php": "^1.5.0",
        "spatie/laravel-package-tools": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "Lettermint\\Laravel\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lettermint\\Laravel\\LettermintServiceProvider"
            ],
            "aliases": {
                "Lettermint": "Lettermint\\Laravel\\Facades\\Lettermint"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
